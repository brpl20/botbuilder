<div id="<%= dom_id ai_agent %>">
  <p>
    <strong>Name:</strong>
    <%= ai_agent.name %>
  </p>

  <p>
    <strong>AI Provider:</strong>
    <%= ai_agent.ai_provider&.name || 'None selected' %>
  </p>

  <p>
    <strong>Persona:</strong>
    <%= ai_agent.persona %>
  </p>

  <% if ai_agent.instructions.any? %>
    <h3>Instructions:</h3>
    <ul>
      <% ai_agent.instructions.each do |instruction| %>
        <li><%= instruction.content %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No instructions available.</p>
  <% end %>

  <% if ai_agent.photo_instruction.attached? %>
    <div>
      <h3>Photo Instructions:</h3>
      <%= image_tag ai_agent.photo_instruction, width: 300 %>
    </div>
  <% end %>
</div>
